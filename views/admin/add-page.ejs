<%- include('../_layouts/adminheader') %>
    <br>
    <h2 class="page-title">Add a page</h2>
    <a href="/admin/pages" class="btn btn-secondary">
        << Back to pages</a>
            <br><br>


            <% if(errors) { %>
                <% errors.forEach( function(errors)  { %>
                    <div class="alert alert-danger">
                        <%= errors.msg %>
                    </div>
                    <% }); %>
                        <% } %>




                            <form action="/admin/pages/add-page" method="post">
                                <div class="form-group">
                                    <label for="">Title</label>
                                    <input type="text" name="title" class="form-control" value="<%= title %>" placeholder="Enter Title">
                                </div>
                                <div class="form-group">
                                    <label for="">Slug</label>
                                    <input type="text" name="slug" class="form-control" value="<%= slug %>" placeholder="Enter Slug">
                                </div>
                                <div class="form-group">
                                    <label for="">Content</label>
                                    <textarea name="content" cols="30" rows="10" class="form-control" value="<%= content %>"></textarea>
                                </div>
                                <button class="btn btn-primary">Submit</button>
                            </form>


                            <%- include('../_layouts/adminfooter') %>